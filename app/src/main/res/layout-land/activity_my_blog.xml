<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_common_act_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingTop="4dp"
        android:paddingRight="16dp"
        android:paddingBottom="4dp">

        <ImageButton
            android:id="@+id/ib_act_my_blog_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="8dp"
            android:src="@mipmap/ic_common_act_btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="我的主页"
            android:textColor="@color/color_ask_title_red"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="268dp"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_my_blog_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="24dp" />

            <TextView
                android:id="@+id/tv_my_blog_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#484848"
                android:textSize="14dp"
                android:textStyle="bold"
                tools:text="名字" />

            <TextView
                android:id="@+id/tv_my_blog_office"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="32dp"
                android:drawableLeft="@mipmap/ic_my_blog_name"
                android:drawablePadding="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#b6b6b6"
                android:textSize="12dp"
                tools:text="科室 级别" />

            <TextView
                android:id="@+id/tv_my_blog_adept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="32dp"
                android:drawableLeft="@mipmap/ic_my_blog_adept"
                android:drawablePadding="16dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#b6b6b6"
                android:textSize="12dp"
                tools:text="擅长" />

            <TextView
                android:id="@+id/tv_my_blog_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="32dp"
                android:drawableLeft="@mipmap/ic_my_blog_position"
                android:drawablePadding="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#b6b6b6"
                android:textSize="12dp"
                tools:text="位置" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_margin="16dp"
                android:background="#b6b6b6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:text="标签"
                android:textColor="#333"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_my_blog_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:maxLines="2"
                android:textColor="#b6b6b6"
                android:textSize="12dp"
                tools:text="标签内容" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_margin="16dp"
                android:background="#b6b6b6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:text="简介"
                android:textColor="#333"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_my_blog_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:maxLines="2"
                android:textColor="#b6b6b6"
                android:textSize="12dp"
                tools:text="简介内容" />


        </LinearLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/refresh_layout_frag_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nsv_frag_home_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="#fff"
                        android:padding="8dp"
                        android:layout_marginBottom="1dp"
                        android:orientation="horizontal">

                        <RadioGroup
                            android:id="@+id/rg_frag_home_menu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/rb_frag_home_menu_yk"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@null"
                                android:layout_marginRight="16dp"
                                android:drawableLeft="@drawable/menu_blog_wz"/>

                            <RadioButton
                                android:id="@+id/rb_frag_home_menu_dt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@null"
                                android:drawableLeft="@drawable/menu_blog_dt"/>

                        </RadioGroup>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <ImageButton
                            android:id="@+id/ib_act_my_blog_create_article"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:padding="8dp"
                            android:src="@mipmap/ic_create_article" />

                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/rg_frag_home_menu_type"
                        android:layout_width="match_parent"
                        android:padding="12dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal">

                    </RadioGroup>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_fragment_home_recom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:id="@+id/ll_frag_home_load"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/pb_frag_home_load"
                            style="?android:attr/progressBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp" />

                        <TextView
                            android:id="@+id/tv_frag_home_load_tip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="加载中..." />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/frag_home_empty_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:minHeight="400dp"
                        android:text="暂无内容"
                        android:visibility="gone" />

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </LinearLayout>

</LinearLayout>