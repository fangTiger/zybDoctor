<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <ImageButton
            android:id="@+id/ib_reg_btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:padding="12dp"
            android:src="@mipmap/ic_btn_dialog_close" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#333"
            android:textSize="13dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/ib_reg_btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:padding="12dp"
            android:src="@mipmap/ic_btn_dialog_ok" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_common_act_bg"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:padding="16dp">

            <RadioGroup
                android:id="@+id/rg_patent_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_patent_type1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:tag="2"
                    android:text="成品药"/>

                <RadioButton
                    android:id="@+id/rb_patent_type2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="3"
                    android:layout_weight="1"
                    android:text="技术服务"
                    android:visibility="invisible"/>

            </RadioGroup>

            <EditText
                android:id="@+id/et_patent_name"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/ask_edit_bg"
                android:layout_below="@+id/rg_patent_type"
                android:layout_marginTop="16dp"
                android:hint="名称"
                android:paddingLeft="12dp"
                android:textColor="@color/color_ask_text_content"
                android:textSize="14dp" />

            <LinearLayout
                android:id="@+id/ll_patent_price"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/et_patent_name"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_patent_price"
                    android:layout_width="120dp"
                    android:layout_height="36dp"
                    android:background="@drawable/ask_edit_bg"
                    android:hint="单价（元）"
                    android:inputType="numberDecimal"
                    android:paddingLeft="12dp"
                    android:textColor="@color/color_ask_text_content"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_patent_price_offer"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="12dp"
                    android:gravity="center_vertical"
                    tools:text="指导价：0.0元"
                    android:textColor="@color/color_ask_text_content"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_patent_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/ll_patent_price"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_patent_num"
                    android:layout_width="120dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="12dp"
                    android:inputType="number"
                    android:background="@drawable/ask_edit_bg"
                    android:hint="用量"
                    android:paddingLeft="12dp"
                    android:textColor="@color/color_ask_text_content"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_patent_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:gravity="center_vertical"
                    android:text="单位"
                    android:textColor="@color/color_ask_text_content"
                    android:textSize="14dp" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_patent_add"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/ll_patent_num"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_red_bg"
                android:stateListAnimator="@null"
                android:text="添加"
                android:textColor="#fff" />

            <RelativeLayout
                android:id="@+id/rl_ebm_sick_dialog"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@+id/et_patent_name"
                android:background="@drawable/paper_bg"
                android:padding="12dp"
                android:visibility="gone">

                <ImageButton
                    android:id="@+id/ib_ebm_dialog_btn_close"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@null"
                    android:src="@android:drawable/ic_menu_close_clear_cancel" />

                <ListView
                    android:id="@+id/lv_ebm_dialog_list_sick"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/ib_ebm_dialog_btn_close" />

                <ProgressBar
                    android:id="@+id/pb_ebm_dialog_sick"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f3f3f3"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_recipe_name"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_margin="16dp"
                android:background="@drawable/ask_edit_bg"
                android:hint="处方名称"
                android:paddingLeft="12dp"
                android:textColor="@color/color_ask_text_content"
                android:textSize="14dp"
                android:visibility="gone" />

            <ListView
                android:id="@+id/lv_patent_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:background="#efefef"
                android:padding="12dp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>