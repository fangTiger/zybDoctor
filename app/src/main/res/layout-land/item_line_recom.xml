<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/iv_recom_item_photo"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/tv_recom_item_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/iv_recom_item_photo"
            android:textColor="#e7650d"
            android:textSize="14dp"
            tools:text="张三" />

        <TextView
            android:id="@+id/tv_recom_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_recom_item_author"
            android:layout_alignBottom="@+id/iv_recom_item_photo"
            android:layout_marginBottom="4dp"
            android:textColor="#b0b0b0"
            android:textSize="12dp"
            tools:text="3分钟前" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_recom_item_con"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textColor="#333"
        android:textSize="14dp"
        tools:text="ljlkjlkjl" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <ImageView
            android:id="@+id/iv_recom_item_1"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="6dp" />

        <ImageView
            android:id="@+id/iv_recom_item_2"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="6dp" />

        <ImageView
            android:id="@+id/iv_recom_item_3"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="6dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <ImageView
            android:id="@+id/iv_recom_item_4"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="6dp" />

        <ImageView
            android:id="@+id/iv_recom_item_5"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="6dp" />

        <ImageView
            android:id="@+id/iv_recom_item_6"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="6dp" />

    </LinearLayout>

    <VideoView
        android:id="@+id/video_view_recom_item"
        android:layout_width="600dp"
        android:layout_margin="12dp"
        android:layout_height="400dp" />

</LinearLayout>