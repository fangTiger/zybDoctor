<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/color_common_act_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingTop="4dp"
        android:paddingRight="16dp"
        android:paddingBottom="4dp">

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="8dp"
            android:src="@mipmap/ic_common_act_btn_back" />

        <TextView
            android:id="@+id/tv_act_base_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="修改密码"
            android:textColor="@color/color_ask_title_red"
            android:textSize="16dp" />


    </LinearLayout>

    <EditText
        android:id="@+id/et_act_login_user"
        android:layout_width="@dimen/act_login_view_width"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:maxLength="30"
        android:hint="原密码"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/et_act_login_pwd"
        android:layout_width="@dimen/act_login_view_width"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="新密码"
        android:maxLength="30"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/et_act_login_pwd_confirm"
        android:layout_width="@dimen/act_login_view_width"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="确认密码"
        android:maxLength="30"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/btn_act_login_confirm"
        android:layout_width="@dimen/act_login_view_width"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/btn_red_bg"
        android:text="确定"
        android:textColor="#fff" />

</LinearLayout>