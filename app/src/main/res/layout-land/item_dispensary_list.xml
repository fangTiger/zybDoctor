<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/frg_ask_disp_item_height"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_dis_list_item_index"
        android:layout_width="@dimen/frg_ask_disp_item_index_width"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:gravity="center"
        tools:text="5623" />

    <TextView
        android:id="@+id/tv_dis_list_item_sicker"
        android:layout_width="@dimen/frg_ask_disp_item_sicker_width"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center"
        tools:text="欧阳楠楠" />

    <TextView
        android:id="@+id/tv_dis_list_item_sick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_weight="1"
        android:gravity="center"
        tools:text="病症" />

    <TextView
        android:id="@+id/tv_dis_list_item_pay_time"
        android:layout_width="@dimen/frg_ask_disp_item_time_width"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:gravity="center"
        tools:text="2019-11-11 10:00" />

    <TextView
        android:id="@+id/tv_dis_list_item_cost"
        android:layout_width="@dimen/frg_ask_disp_item_cost_width"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:gravity="center"
        tools:text="1026.35元" />

    <TextView
        android:id="@+id/tv_dis_list_item_doctor"
        android:layout_width="@dimen/frg_ask_disp_item_doctor_width"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center"
        tools:text="李医师" />

</LinearLayout>