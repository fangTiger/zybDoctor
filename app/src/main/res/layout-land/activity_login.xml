<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="32dp">

        <TextView
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="16dp"
            android:text="注册"
            android:textColor="@color/color_ask_title_red"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:src="@mipmap/img_login_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="中医宝"
            android:textColor="@color/color_ask_title_red"
            android:textSize="18dp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:id="@+id/ll_login_by_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_act_login_user"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_login_et"
                    android:drawableLeft="@mipmap/ic_login_user"
                    android:drawablePadding="20dp"
                    android:hint="请输入账号"
                    android:maxLines="1"
                    android:paddingLeft="32dp"
                    android:textColorHint="#ccc" />

                <EditText
                    android:id="@+id/et_act_login_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_login_et"
                    android:drawableLeft="@mipmap/ic_login_pwd"
                    android:drawablePadding="20dp"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingLeft="32dp"
                    android:textColorHint="#ccc" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_login_by_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <EditText
                    android:id="@+id/et_act_login_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_login_et"
                    android:drawableLeft="@mipmap/ic_hospital_detail_phone"
                    android:drawablePadding="20dp"
                    android:hint="请输入手机号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:paddingLeft="32dp"
                    android:textColorHint="#ccc" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <EditText
                        android:id="@+id/et_act_login_code"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_login_et"
                        android:drawableLeft="@mipmap/icon_input_tip_code"
                        android:drawablePadding="20dp"
                        android:hint="短信验证码"
                        android:inputType="number"
                        android:maxLength="6"
                        android:maxLines="1"
                        android:paddingLeft="32dp"
                        android:textColorHint="#ccc" />

                    <TextView
                        android:id="@+id/btn_act_login_code"
                        android:layout_width="120dp"
                        android:layout_height="48dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:text="获取验证码"
                        android:textColor="#666" />
                </RelativeLayout>


            </LinearLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/btn_login_type_change"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textColor="@color/color_ask_title_red" />

        <Button
            android:id="@+id/btn_act_login_confirm"
            android:layout_width="400dp"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_login_btn"
            android:text="登录"
            android:textColor="#fff"
            android:textSize="16dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>