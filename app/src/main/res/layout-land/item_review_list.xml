<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@drawable/ask_list_item_bg">

    <TextView
        android:id="@+id/index"
        android:layout_width="32dp"
        android:layout_height="match_parent"
        android:background="#f8b865"
        android:gravity="center"
        android:text="1"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:drawableRight="@mipmap/ic_ask_tag_online"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:text="杨超越"
        android:textColor="#333"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sex"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/name"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/name"
        android:gravity="center_vertical"
        android:text="女"
        android:textColor="#999"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/age"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/name"
        android:layout_toRightOf="@+id/sex"
        android:gravity="center_vertical"
        android:text="30岁"
        android:textColor="#999"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/state"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:text="待提醒"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_below="@+id/name"
        android:layout_alignLeft="@+id/name"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:text="复诊时间：8:00-12:00"
        android:textColor="#f2a3a5"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/add"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/time"
        android:layout_toRightOf="@+id/time"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="籍贯：北京市海淀区五棵松"
        android:textColor="#999"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/code"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:text="身份证号：130******4563"
        android:layout_alignTop="@+id/time"
        android:layout_toRightOf="@+id/add"
        android:textColor="#999"
        android:textSize="13dp" />

    <ImageView
        android:id="@+id/tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_ask_btn_tip"
        android:layout_below="@+id/state"
        android:layout_alignRight="@+id/state"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_marginTop="18dp"/>

</RelativeLayout>