<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="1dp"
    android:background="#999"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#eee"
        android:gravity="center_vertical"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="选择所属病症" />

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            android:src="@mipmap/ic_btn_dialog_close"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="360dp"
        android:layout_marginRight="1dp"
        android:background="#fff"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:paddingTop="8dp"
            android:visibility="gone"
            android:paddingRight="24dp"
            android:paddingBottom="8dp">

            <EditText
                android:id="@+id/et_menu_search_key"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="@drawable/common_btn_search_bg"
                android:gravity="center_vertical"
                android:hint="搜索"
                android:paddingLeft="12dp"
                android:textSize="13dp" />

            <ImageButton
                android:id="@+id/btn_menu_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:background="@null"
                android:padding="6dp"
                android:src="@mipmap/ic_common_btn_search" />

        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_act_my_recipe_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</LinearLayout>