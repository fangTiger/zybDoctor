<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_common_act_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ib_act_base_list_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="8dp"
                android:src="@mipmap/ic_common_act_btn_back" />

            <TextView
                android:id="@+id/tv_act_base_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="个人处方库"
                android:textColor="@color/color_ask_title_red"
                android:textSize="16dp" />

            <ImageButton
                android:id="@+id/ib_act_base_list_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="8dp"
                android:src="@mipmap/ic_create_recipe" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingTop="12dp"
            android:paddingRight="30dp"
            android:paddingBottom="12dp"
            android:visibility="gone">

            <EditText
                android:id="@+id/et_menu_search_key"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/common_btn_search_bg"
                android:gravity="center_vertical"
                android:hint="搜索"
                android:paddingLeft="12dp"
                android:textSize="13dp" />

            <ImageButton
                android:id="@+id/btn_menu_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:background="@null"
                android:padding="6dp"
                android:src="@mipmap/ic_common_btn_search" />

        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_act_my_recipe_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_emb_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_common_act_bg"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#fff">

            <ImageButton
                android:id="@+id/ib_ebm_btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:padding="8dp"
                android:src="@mipmap/ic_common_act_btn_back" />

            <TextView
                android:id="@+id/tv_ebm_sick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

            <ImageButton
                android:id="@+id/ib_ebm_btn_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:visibility="gone"
                android:padding="8dp"
                android:src="@mipmap/ic_btn_dialog_ok" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <EditText
                android:id="@+id/et_act_recipe_list_key"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/common_btn_search_bg"
                android:gravity="center_vertical"
                android:hint="中医名称、西医名称、处方名称等"
                android:paddingLeft="12dp"
                android:textSize="13dp" />

            <ImageButton
                android:id="@+id/btn_act_recipe_list_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:background="@null"
                android:padding="6dp"
                android:src="@mipmap/ic_common_btn_search" />

        </RelativeLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/refresh_layout_frag_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nsv_frag_home_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_fragment_dis_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:id="@+id/ll_frag_home_load"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/pb_frag_home_load"
                            style="?android:attr/progressBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp" />

                        <TextView
                            android:id="@+id/tv_frag_home_load_tip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="加载中..." />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/frag_home_empty_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:minHeight="400dp"
                        android:text="暂无内容"
                        android:visibility="gone" />

                </LinearLayout>


            </androidx.core.widget.NestedScrollView>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </LinearLayout>

</FrameLayout>
