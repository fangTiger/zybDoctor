<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_common_act_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/white">

        <ImageButton
            android:id="@+id/ib_act_article_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:src="@mipmap/ic_common_act_btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="文章详情"
            android:textColor="#333"
            android:textSize="16dp" />

        <ImageButton
            android:id="@+id/ib_act_article_detail_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:padding="8dp"
            android:src="@mipmap/ic_btn_share" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv_act_article_detail_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:id="@+id/ll_act_article_detail_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingTop="24dp"
                android:paddingRight="16dp"
                android:paddingBottom="24dp">

                <TextView
                    android:id="@+id/tv_act_article_detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_ask_title_black"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    tools:text="你好" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_act_article_detail_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        tools:text="林东东" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="发布"
                        android:textColor="#8d8d8d" />

                    <TextView
                        android:id="@+id/tv_act_article_detail_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:textColor="#c0c0c0"
                        tools:text="2019-09-09" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_act_article_detail_surface"
                    android:layout_width="320dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerInside"
                    android:layout_margin="20dp" />

                <TextView
                    android:id="@+id/tv_act_article_detail_con"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="160dp"
                    tools:text="内容"
                    android:textColor="#666"
                    android:visibility="gone"
                    android:textSize="14dp" />

                <WebView
                    android:id="@+id/wv_act_article_detail_con"
                    android:exported="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

        <RelativeLayout
            android:id="@+id/rl_act_article_detail_drawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:id="@+id/ll_act_article_detail_center_divider"
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#ccc"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/tv_act_article_detail_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/ll_act_article_detail_center_divider"
                android:drawableLeft="@mipmap/icon_article_collect"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:textColor="#bbb"
                tools:text="0" />

            <TextView
                android:id="@+id/tv_act_article_detail_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:layout_toRightOf="@+id/ll_act_article_detail_center_divider"
                android:drawableLeft="@mipmap/icon_article_support"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:textColor="#bbb"
                tools:text="0" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>