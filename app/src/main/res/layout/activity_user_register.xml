<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/white">

        <ImageButton
            android:id="@+id/ib_act_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:padding="8dp"
            android:src="@mipmap/ic_common_act_btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:text="注册"
            android:textColor="#333"
            android:textSize="16dp" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_common_divider_theme"/>

    <androidx.core.widget.NestedScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="32dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:src="@mipmap/img_register_logo" />

            <EditText
                android:id="@+id/et_act_login_mobile"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_login_et"
                android:drawableLeft="@mipmap/ic_hospital_detail_phone"
                android:drawablePadding="20dp"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="11"
                android:maxLines="1"
                android:paddingLeft="32dp"
                android:textColorHint="#ccc" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <EditText
                    android:id="@+id/et_act_login_code"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_login_et"
                    android:drawableLeft="@mipmap/icon_input_tip_code"
                    android:drawablePadding="20dp"
                    android:hint="短信验证码"
                    android:inputType="number"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:paddingLeft="32dp"
                    android:textColorHint="#ccc" />

                <TextView
                    android:id="@+id/btn_act_login_code"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="#666" />
            </RelativeLayout>

            <EditText
                android:id="@+id/et_act_login_pwd"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_login_et"
                android:drawableLeft="@mipmap/ic_login_pwd"
                android:drawablePadding="20dp"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:maxLength="30"
                android:maxLines="1"
                android:layout_marginTop="12dp"
                android:paddingLeft="32dp"
                android:textColorHint="#ccc" />

            <EditText
                android:id="@+id/et_act_login_pwd_confirm"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_login_et"
                android:drawableLeft="@mipmap/ic_login_pwd"
                android:drawablePadding="20dp"
                android:hint="请确认密码"
                android:inputType="textPassword"
                android:maxLength="30"
                android:maxLines="1"
                android:paddingLeft="32dp"
                android:textColorHint="#ccc" />


            <Button
                android:id="@+id/btn_act_login_confirm"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_login_btn"
                android:text="注册"
                android:textColor="#fff"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="注册即代表您同意" />

                <TextView
                    android:id="@+id/btn_register_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="用户服务协议"
                    android:textColor="@color/color_ask_title_red" />

                <TextView
                    android:id="@+id/btn_register_privacy"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="12dp"
                    android:text="隐私政策"
                    android:textColor="@color/color_ask_title_red" />
            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>

