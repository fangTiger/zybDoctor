<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:background="@drawable/ask_list_item_bg">

    <TextView
        android:id="@+id/index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:text="1"
        android:textColor="#fff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="6dp"
        android:paddingLeft="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:drawableRight="@mipmap/ic_ask_tag_online"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                tools:text="杨超越"
                android:textColor="#333"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sex"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                tools:text="女"
                android:textColor="#999"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/age"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                tools:text="30岁"
                android:textColor="#999"
                android:textSize="13dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:gravity="center_vertical"
            tools:text="身份证号：130******4563"
            android:textColor="#999"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:gravity="center_vertical"
            tools:text="预约时间：8:00-12:00"
            android:textColor="#f2a3a5"
            android:visibility="gone"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:gravity="center_vertical"
            tools:text="籍贯：北京市海淀区五棵松"
            android:textColor="#999"
            android:textSize="13dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/state_ll"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/state_ask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/ic_ask_state_ok"
            android:drawablePadding="8dp"
            android:text="诊断"
            android:textColor="#555"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/state_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:drawableRight="@mipmap/ic_ask_state_ok"
            android:drawablePadding="8dp"
            android:text="缴费"
            android:textColor="#555"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/state_take"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/ic_ask_state_ok"
            android:drawablePadding="8dp"
            android:text="取药"
            android:textColor="#555"
            android:textSize="13dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/assist_iv"
        android:layout_toLeftOf="@id/state_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="5dp"
        android:src="@mipmap/ic_assist"
        tools:visibility="visible"
        android:visibility="gone"/>
</RelativeLayout>