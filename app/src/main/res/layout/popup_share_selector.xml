<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_divider_top"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="分享到"
            android:textColor="@color/colorTextBlack"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/iv_btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_dialog_close" />

    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="14dp">

            <TextView
                android:id="@+id/tv_choose_share_btn_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="14dp"
                android:drawablePadding="6dp"
                android:drawableTop="@mipmap/icon_share_wx"
                android:gravity="center"
                android:text="微信好友"
                android:textColor="@color/colorTextBlack"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_choose_share_btn_wxblog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="6dp"
                android:drawableTop="@mipmap/icon_share_pyq"
                android:gravity="center"
                android:text="朋友圈"
                android:textColor="@color/colorTextBlack"
                android:textSize="10dp" />

        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>