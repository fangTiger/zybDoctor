<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_common_act_theme"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/white">

        <ImageButton
            android:id="@+id/ib_act_base_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:padding="8dp"
            android:src="@mipmap/ic_common_act_btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="约诊设置"
            android:textColor="#333"
            android:textSize="16dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/tv_doc_work_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="状态"
            android:textColor="@color/colorTextBlack" />

        <Switch
            android:id="@+id/sw_doc_work_state"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_doc_work_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="#fff"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="问诊金设置（单位：元）"
                android:textColor="@color/colorTextBlack"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_divider_top"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="线上"
                    android:textColor="@color/colorTextBlack" />

                <TextView
                    android:id="@+id/tv_work_set_online_fee"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableRight="@mipmap/ic_mine_tip_more"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_divider_top"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="线下"
                    android:textColor="@color/colorTextBlack" />

                <TextView
                    android:id="@+id/tv_work_set_offline_fee"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableRight="@mipmap/ic_mine_tip_more"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="14dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="#fff"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="预约人数限制（单位：人）"
                android:textColor="@color/colorTextBlack"
                android:textSize="15dp" />

            <LinearLayout
                android:id="@+id/ll_morning_container"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_divider_top"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_work_set_morning_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:src="@mipmap/common_icon_cb_draw_normal" />

                <TextView
                    android:id="@+id/tv_work_set_morning_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上午（8:00-12:00）"
                    android:textColor="@color/text_able_enable_color" />

                <TextView
                    android:id="@+id/tv_work_set_morning_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableRight="@mipmap/ic_mine_tip_more"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/text_able_enable_color"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_afternoon_container"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_divider_top"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_work_set_afternoon_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:src="@mipmap/common_icon_cb_draw_normal" />

                <TextView
                    android:id="@+id/tv_work_set_afternoon_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下午（13:00-18:00）"
                    android:textColor="@color/text_able_enable_color" />

                <TextView
                    android:id="@+id/tv_work_set_afternoon_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableRight="@mipmap/ic_mine_tip_more"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/text_able_enable_color"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_night_container"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_divider_top"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_work_set_night_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:src="@mipmap/common_icon_cb_draw_normal" />

                <TextView
                    android:id="@+id/tv_work_set_night_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="晚上（18:00-22:00）"
                    android:textColor="@color/text_able_enable_color" />

                <TextView
                    android:id="@+id/tv_work_set_night_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableRight="@mipmap/ic_mine_tip_more"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/text_able_enable_color"
                    android:textSize="14dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>