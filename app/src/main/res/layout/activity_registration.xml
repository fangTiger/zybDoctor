<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ib_reg_btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="8dp"
            android:src="@mipmap/ic_common_act_btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="挂号"
            android:gravity="center"
            android:textColor="#333"
            android:textSize="18dp" />

        <Button
            android:id="@+id/ib_reg_btn_ok"
            android:layout_width="48dp"
            android:layout_height="@dimen/act_treat_btn_height"
            android:background="@drawable/btn_red_bg"
            android:text="问诊"
            android:layout_marginRight="12dp"
            android:textColor="#fff"
            android:textSize="@dimen/act_treat_btn_text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#e2e2e2" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/registration_item_height"
                android:background="@drawable/bg_divider_bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_reg_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="就诊人*"
                    android:textColor="@color/color_ask_title_red"
                    android:textSize="@dimen/registration_title_text_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_reg_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:hint="请输入就诊人姓名"
                    android:maxLength="10"
                    android:paddingLeft="8dp"
                    android:background="@null"
                    android:paddingRight="8dp"
                    android:textColorHint="#bbb"
                    android:textSize="@dimen/registration_item_text_size" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/registration_item_height"
                        android:background="@drawable/bg_divider_bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_reg_mobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="手机号*"
                            android:textColor="@color/color_ask_title_red"
                            android:textSize="@dimen/registration_title_text_size"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et_reg_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right|center_vertical"
                            android:hint="请输入手机号"
                            android:paddingLeft="8dp"
                            android:background="@null"
                            android:paddingRight="8dp"
                            android:textColorHint="#bbb"
                            android:textSize="@dimen/registration_item_text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/registration_item_height"
                        android:background="@drawable/bg_divider_bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_reg_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="年龄*"
                            android:textColor="@color/color_ask_title_red"
                            android:textSize="@dimen/registration_title_text_size"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et_reg_age"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right|center_vertical"
                            android:hint="请输入年龄"
                            android:inputType="number"
                            android:paddingLeft="8dp"
                            android:background="@null"
                            android:paddingRight="8dp"
                            android:textColorHint="#bbb"
                            android:textSize="@dimen/registration_item_text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/registration_item_height"
                        android:background="@drawable/bg_divider_bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_reg_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="性别*"
                            android:layout_weight="1"
                            android:textColor="@color/color_ask_title_red"
                            android:textSize="@dimen/registration_title_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/et_reg_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="right|center_vertical"
                            android:layout_weight="1"
                            android:textColor="@color/colorTextBlack"
                            android:textSize="@dimen/registration_item_text_size" />

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_mine_tip_more"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/registration_item_height"
                        android:background="@drawable/bg_divider_bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_reg_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="身份证号"
                            android:textSize="@dimen/registration_title_text_size"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et_reg_card"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right|center_vertical"
                            android:hint="请输入身份证号"
                            android:paddingLeft="8dp"
                            android:background="@null"
                            android:paddingRight="8dp"
                            android:textColorHint="#bbb"
                            android:textSize="@dimen/registration_item_text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rl_reg_add"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/registration_item_height"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_divider_bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="籍贯*"
                            android:textColor="@color/color_ask_title_red"
                            android:textSize="@dimen/registration_title_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_reg_location"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="right|center_vertical"
                            android:textSize="14dp"
                            tools:text="北京市"
                            android:textColor="@color/colorTextBlack"
                            android:layout_weight="1"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_mine_tip_more"
                            android:layout_gravity="center_vertical"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/area_ll"
                        android:layout_width="match_parent"
                        android:minHeight="@dimen/registration_item_height"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_divider_bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="收货地址"
                            android:textSize="@dimen/registration_title_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/area_tv"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:minHeight="@dimen/registration_item_height"
                            android:layout_height="wrap_content"
                            android:gravity="right|center_vertical"
                            android:background="@null"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:textColor="@color/colorTextBlack"
                            android:textSize="14dp" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_mine_tip_more"
                            android:layout_gravity="center_vertical"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:minHeight="@dimen/registration_item_height"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_divider_bottom"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_reg_add_detail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:background="@null"
                            android:paddingRight="8dp"
                            android:textColor="@color/colorTextBlack"
                            android:hint="详细地址：如街道、楼牌号等"
                            android:singleLine="true"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/registration_item_height"
                        android:background="@drawable/bg_divider_bottom"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_reg_cost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="挂号费（元）"
                            android:textSize="@dimen/registration_title_text_size"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et_reg_cost"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right|center_vertical"
                            android:paddingLeft="8dp"
                            android:background="@null"
                            android:paddingRight="8dp"
                            android:textColorHint="#bbb"
                            android:inputType="numberDecimal"
                            android:textSize="@dimen/registration_item_text_size" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_reg_photo"
                        android:layout_width="240dp"
                        android:layout_height="160dp"
                        android:src="@mipmap/img_ai_photo"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="centerInside"
                        android:layout_marginTop="12dp"/>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_reg_patient_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@android:color/white"
                    android:padding="12dp"
                    android:visibility="gone"
                    tools:visibility="invisible">

                    <ImageButton
                        android:id="@+id/ib_reg_btn_patient_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:src="@mipmap/ic_dialog_close" />

                    <ListView
                        android:id="@+id/lv_reg_list_patient"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/ib_reg_btn_patient_close" />

                    <ProgressBar
                        android:id="@+id/pb_reg_patient"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true" />

                </RelativeLayout>

            </FrameLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>