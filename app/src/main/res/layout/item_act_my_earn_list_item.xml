<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_group_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/act_my_earn_list_item_title_padding"
        android:paddingRight="@dimen/act_my_earn_list_item_title_padding">

        <TextView
            android:id="@+id/tv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2020年01月" />

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="09" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="日" />

        <TextView
            android:id="@+id/tv_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="周三" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结算金额(元)" />

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="@color/color_ask_title_red"
            tools:text="10000.00" />

        <ImageView
            android:id="@+id/iv_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_recipe_user_create"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:layout_marginTop="1dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/act_my_earn_list_item_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_content1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:paddingLeft="@dimen/my_earn_item_padding_left"
                android:textSize="@dimen/act_my_earn_list_item_text_size_mobile"
                tools:text="医师：张三" />

            <TextView
                android:id="@+id/tv_content2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:paddingLeft="@dimen/my_earn_item_padding_left"
                android:textSize="@dimen/act_my_earn_list_item_text_size_mobile"
                tools:text="医师：张三" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/act_my_earn_list_item_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_content3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:paddingLeft="@dimen/my_earn_item_padding_left"
                android:textSize="@dimen/act_my_earn_list_item_text_size_mobile"
                tools:text="医师：张三" />

            <TextView
                android:id="@+id/tv_content4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:paddingLeft="@dimen/my_earn_item_padding_left"
                android:textSize="@dimen/act_my_earn_list_item_text_size_mobile"
                tools:text="医师：张三" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/act_my_earn_list_item_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_content5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:paddingLeft="@dimen/my_earn_item_padding_left"
                android:textSize="@dimen/act_my_earn_list_item_text_size_mobile"
                tools:text="医师：张三" />

            <TextView
                android:id="@+id/tv_content6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:paddingLeft="@dimen/my_earn_item_padding_left"
                android:textSize="@dimen/act_my_earn_list_item_text_size_mobile"
                tools:text="医师：张三" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/act_my_earn_list_item_height"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_content7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:paddingLeft="@dimen/my_earn_item_padding_left"
                android:textSize="@dimen/act_my_earn_list_item_text_size_mobile"
                tools:text="医师：张三" />

            <TextView
                android:id="@+id/tv_content8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:paddingLeft="@dimen/my_earn_item_padding_left"
                android:textSize="@dimen/act_my_earn_list_item_text_size_mobile"
                tools:text="医师：张三" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/act_my_earn_list_item_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_content9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:paddingLeft="@dimen/my_earn_item_padding_left"
                android:textSize="@dimen/act_my_earn_list_item_text_size_mobile"
                tools:text="医师：张三" />

            <TextView
                android:id="@+id/tv_content10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:paddingLeft="@dimen/my_earn_item_padding_left"
                android:textSize="@dimen/act_my_earn_list_item_text_size_mobile"
                tools:text="医师：张三" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
    
