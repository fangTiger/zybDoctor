<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="60dp"
        android:paddingTop="12dp"
        android:paddingRight="60dp"
        android:paddingBottom="12dp">

        <EditText
            android:id="@+id/et_act_recipe_list_key"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:hint="中医名称、西医名称、个人处方名称"
            android:textSize="13dp"
            android:background="@drawable/common_btn_search_bg" />

        <ImageButton
            android:id="@+id/btn_act_recipe_list_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:layout_alignParentRight="true"
            android:padding="6dp"
            android:src="@mipmap/ic_common_btn_search" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_act_recipe_list_header"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@drawable/dispensary_list_title_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="处方名称"
            android:textStyle="bold" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="中医诊断"
            android:textStyle="bold" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="西医诊断"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="药品对象"
            android:textStyle="bold" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="创建时间"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@null"
            android:src="@android:drawable/ic_menu_edit"
            android:visibility="gone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@mipmap/ic_delete_recipe"
            android:visibility="invisible" />

    </LinearLayout>

</LinearLayout>