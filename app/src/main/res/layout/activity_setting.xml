<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/titlebar"
        layout="@layout/title_bar_common"/>


    <TextView
        android:id="@+id/agreement_text"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="14dp"
        android:text="用户服务协议"
        android:textColor="#222222"
        android:textSize="16dp"
        android:gravity="center_vertical"
        android:background="@color/colorTextWhite"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titlebar"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="14dp"
        android:src="@mipmap/ic_mine_tip_more"
        app:layout_constraintTop_toTopOf="@id/agreement_text"
        app:layout_constraintBottom_toBottomOf="@id/agreement_text"
        app:layout_constraintRight_toRightOf="@id/agreement_text"/>

    <TextView
        android:id="@+id/privacy_text"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="14dp"
        android:layout_marginTop="0.5dp"
        android:text="隐私政策"
        android:textColor="#222222"
        android:textSize="16dp"
        android:gravity="center_vertical"
        android:background="@color/colorTextWhite"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/agreement_text"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="14dp"
        android:src="@mipmap/ic_mine_tip_more"
        app:layout_constraintTop_toTopOf="@id/privacy_text"
        app:layout_constraintBottom_toBottomOf="@id/privacy_text"
        app:layout_constraintRight_toRightOf="@id/privacy_text"/>


    <Button
        android:id="@+id/btn_frag_mine_exit"
        android:layout_width="160dp"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="40dp"
        android:background="@drawable/btn_red_bg"
        android:text="退出当前账号"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>